  "devDependencies": {
    "@release-it/bumper": "^4.0.0",
    "@release-it/conventional-changelog": "^5.1.0",
    "release-it": "^15.5.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": false
